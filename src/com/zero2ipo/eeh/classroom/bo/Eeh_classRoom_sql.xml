<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
		 "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap>
<typeAlias alias="classroomBo" type="com.zero2ipo.eeh.classroom.bo.ClassRoomBo"/>
<resultMap class="classroomBo" id="classroomMap">
	<result property="id" column="id"/>
	<result property="name" column="name"/>
	<result property="floors" column="floors"/>
	<result property="tbId" column="tbId"/>
	<result property="classId" column="classId"/>
	<result property="ip" column="ip"/>
	<result property="homeNum" column="homeNum"/>
</resultMap>
	<!--根据id查询查询-->
	<select id='findClassRoomById' resultClass='classroomBo'>
		SELECT
		id,
		name,
		floors,
		classId,
		tbId,
		ip,
		homeNum
		FROM
			eeh_class_room
		WHERE  id=#id#
	</select>

<!--查询-->
<select id='findClassRoomList' resultMap='classroomMap'>
SELECT
	id,
	name,
	floors,
	classId,
	tbId,
	ip,
	homeNum
FROM
	eeh_class_room
<dynamic prepend="WHERE">
<isNotEmpty prepend="AND" property="name">
INSTR(name,#name#)>0
</isNotEmpty>
</dynamic>
</select>
<!--查询个数-->
	<select id='findClassRoomListCount' resultClass='java.lang.Integer'>
		SELECT
		count(0)
		FROM
		eeh_class_room
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="name">
				INSTR(name,#name#)>0
			</isNotEmpty>
		</dynamic>
	</select>
<!--新增-->
<insert id="add_ClassRoom" parameterClass="classroomBo">
	INSERT INTO
		eeh_class_room(
		name,
		floors,
		classId,
		tbId,
		ip,
		homeNum
	)VALUES(
		#name#,
		#floors#,
		#classId#,
		#tbId#,
		#ip#,
		#homeNum#
	)
</insert>
<!--修改-->
<update id="upd_ClassRoom" parameterClass="classroomBo">
	UPDATE
		eeh_class_room
	SET
	name=#name#,
	floors=#floors#,
	classId=#classId#,
	tbId=#tbId#,
	ip=#ip#,
	homeNum=#homeNum#
 	WHERE
	ID=#id#
</update>
<!--删除-->
<delete id="del_ClassRoom" parameterClass="java.util.Map">
	DELETE FROM
	eeh_class_room
	WHERE
	ID IN
	<iterate property="id" conjunction="," close=")" open="(">
	#id[]#
	</iterate>
</delete>
</sqlMap>
